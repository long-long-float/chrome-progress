{
  "name": "Chrome Progress",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Show progress bar",
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["js/lib/pace.min.js"],
      "css": ["css/lib/pace.css"]
    }
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "http://*/*", "https://*/*",
    "tabs"
  ]
}